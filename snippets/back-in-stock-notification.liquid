<script>
// Funções globais para abrir/fechar modal
window.openBackInStockModal = function(productId) {
  const modal = document.getElementById('back-in-stock-modal-' + productId);
  if (modal) {
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }
};

window.closeBackInStockModal = function(event, productId) {
  event.preventDefault();
  event.stopPropagation();
  const modal = document.getElementById('back-in-stock-modal-' + productId);
  if (modal) {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }
};

// Fechar com ESC
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    const activeModal = document.querySelector('.back-in-stock-modal.active');
    if (activeModal) {
      activeModal.classList.remove('active');
      document.body.style.overflow = '';
    }
  }
});

// Submit do formulário
(function() {
  const form = document.getElementById('notify-form-{{ product.id }}');
  const messageDiv = document.getElementById('notify-message-{{ product.id }}');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const email = document.getElementById('notify-email-{{ product.id }}').value;
      const variantId = document.getElementById('notify-variant-id-{{ product.id }}').value;
      const variantTitle = document.getElementById('notify-variant-title-{{ product.id }}').value;
      const productTitle = '{{ product.title | escape }}';
      
      messageDiv.style.display = 'block';
      messageDiv.className = 'back-in-stock-form__message';
      messageDiv.textContent = 'Enviando...';
      
      // Salvar no localStorage
      const notifications = JSON.parse(localStorage.getItem('backInStockNotifications') || '[]');
      notifications.push({
        email: email,
        productId: '{{ product.id }}',
        variantId: variantId,
        variantTitle: variantTitle,
        productTitle: productTitle,
        date: new Date().toISOString()
      });
      localStorage.setItem('backInStockNotifications', JSON.stringify(notifications));
      
      // Enviar para o email da loja
      fetch('/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: new URLSearchParams({
          'form_type': 'contact',
          'utf8': '✓',
          'contact[email]': email,
          'contact[subject]': 'Notificação de Estoque - ' + productTitle,
          'contact[body]': 'Cliente ' + email + ' quer ser notificado quando o produto "' + productTitle + '" (' + variantTitle + ') voltar ao estoque.\n\nID do Produto: {{ product.id }}\nID da Variante: ' + variantId
        })
      }).then(function() {
        messageDiv.className = 'back-in-stock-form__message success';
        messageDiv.innerHTML = '✓ Pronto! Você receberá um e-mail quando o produto voltar ao estoque.';
        form.reset();
        
        setTimeout(function() {
          closeBackInStockModal(new Event('click'), {{ product.id }});
        }, 2500);
      }).catch(function() {
        messageDiv.className = 'back-in-stock-form__message success';
        messageDiv.innerHTML = '✓ Pronto! Você receberá um e-mail quando o produto voltar ao estoque.';
        form.reset();
        
        setTimeout(function() {
          closeBackInStockModal(new Event('click'), {{ product.id }});
        }, 2500);
      });
    });
  }
})();
</script>


