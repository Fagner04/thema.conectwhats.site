      {%- if settings.show_color_swatch and template != 'blog' -%}
        {%- capture color_swatch -%}
          {%- capture color_name -%}{{ section.id }}-{{ product.id }}{%- endcapture -%}

          {%- for option in product.options_with_values -%}
            {%- assign downcased_option = option.name | downcase -%}

            {%- if color_label contains downcased_option -%}
              {%- assign variant_option = 'option' | append: forloop.index -%}
              {%- assign value_to_match = filtered_variant[variant_option] | default: option.selected_value -%}

              {%- for value in option.values -%}
                {%- assign downcased_value = value | downcase -%}
                {%- capture color_id -%}{{ color_name }}-{{ forloop.index }}{%- endcapture -%}

                {%- for variant in product.variants -%}
                  {%- if variant[variant_option] == value -%}
                    {%- assign variant_for_value = variant -%}
                    {%- break -%}
                  {%- endif -%}
                {%- endfor -%}

                <div class="color-swatch {% if downcased_value == 'white' or downcased_value == 'blanc' %}color-swatch--white{% endif %}">
                  {%- if variant_for_value.featured_media -%}
                    {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,300,400,500,600,700,800', image: variant_for_value.featured_media.preview_image -%}{%- endcapture -%}
                    {%- assign image_url = variant_for_value.featured_media | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  {%- endif -%}

                  {%- assign color_swatch_name = value | handle | append: '.png' -%}
                  {%- assign color_swatch_image = images[color_swatch_name] -%}
                  
                  {%- comment -%}Usar imagem da variante se disponível{%- endcomment -%}
                  {%- assign variant_image_for_swatch = blank -%}
                  {%- assign variant_color_metafield = blank -%}
                  {%- if variant_for_value.image -%}
                    {%- assign variant_image_for_swatch = variant_for_value.image -%}
                  {%- endif -%}
                  
                  {%- comment -%}Buscar cor do metacampo da variante (múltiplos namespaces){%- endcomment -%}
                  {%- if variant_for_value.metafields.custom.color.value != blank -%}
                    {%- assign variant_color_metafield = variant_for_value.metafields.custom.color.value -%}
                  {%- elsif variant_for_value.metafields.custom.color != blank -%}
                    {%- assign variant_color_metafield = variant_for_value.metafields.custom.color -%}
                  {%- elsif variant_for_value.metafields.color.value != blank -%}
                    {%- assign variant_color_metafield = variant_for_value.metafields.color.value -%}
                  {%- elsif variant_for_value.metafields.color.color != blank -%}
                    {%- assign variant_color_metafield = variant_for_value.metafields.color.color -%}
                  {%- endif -%}
                  
                  {%- comment -%}Buscar cor do metacampo do produto (múltiplos formatos){%- endcomment -%}
                  {%- assign category_color_metafield = blank -%}
                  {%- assign color_mapping_value = blank -%}
                  
                  {%- comment -%}Tentar diferentes formatos de metacampo{%- endcomment -%}
                  {%- if product.metafields.custom.color_mapping.value != blank -%}
                    {%- assign color_mapping_value = product.metafields.custom.color_mapping.value | strip -%}
                  {%- elsif product.metafields.custom.color_mapping != blank -%}
                    {%- assign color_mapping_value = product.metafields.custom.color_mapping | strip -%}
                  {%- elsif product.metafields.color_mapping.value != blank -%}
                    {%- assign color_mapping_value = product.metafields.color_mapping.value | strip -%}
                  {%- elsif product.metafields.color_mapping != blank -%}
                    {%- assign color_mapping_value = product.metafields.color_mapping | strip -%}
                  {%- elsif product.metafields.color.mapping != blank -%}
                    {%- assign color_mapping_value = product.metafields.color.mapping | strip -%}
                  {%- endif -%}
                  
                  {%- comment -%}Se encontrou mapeamento, buscar a cor{%- endcomment -%}
                  {%- if color_mapping_value != blank -%}
                    {%- assign value_normalized = value | strip | downcase -%}
                    {%- assign color_mappings = color_mapping_value | split: '|' -%}
                    {%- for mapping in color_mappings -%}
                      {%- assign mapping_clean = mapping | strip -%}
                      {%- if mapping_clean != blank -%}
                        {%- assign mapping_parts = mapping_clean | split: ':' -%}
                        {%- if mapping_parts.size >= 2 -%}
                          {%- assign mapping_name = mapping_parts[0] | strip -%}
                          {%- assign mapping_name_normalized = mapping_name | downcase -%}
                          {%- assign mapping_value = mapping_parts[1] | strip -%}
                          {%- comment -%}Comparar exato primeiro, depois normalizado{%- endcomment -%}
                          {%- if mapping_name == value or mapping_name_normalized == value_normalized -%}
                            {%- assign category_color_metafield = mapping_value -%}
                            {%- break -%}
                          {%- endif -%}
                        {%- endif -%}
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                  
                  {%- comment -%}Buscar cor nas TAGS do produto{%- endcomment -%}
                  {%- assign tag_color_metafield = blank -%}
                  {%- if category_color_metafield == blank -%}
                    {%- for tag in product.tags -%}
                      {%- if tag contains 'color:' -%}
                        {%- assign tag_parts = tag | remove: 'color:' | split: ':' -%}
                        {%- assign tag_color_name = tag_parts[0] | strip -%}
                        {%- if tag_color_name == value -%}
                          {%- assign tag_color_metafield = tag_parts[1] | strip -%}
                          {%- break -%}
                        {%- endif -%}
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                  
                  {%- comment -%}Buscar cor nas coleções do produto{%- endcomment -%}
                  {%- assign collection_color_metafield = blank -%}
                  {%- if category_color_metafield == blank and tag_color_metafield == blank -%}
                    {%- for product_collection in product.collections -%}
                      {%- assign collection_mapping = blank -%}
                      {%- if product_collection.metafields.custom.color_mapping.value != blank -%}
                        {%- assign collection_mapping = product_collection.metafields.custom.color_mapping.value -%}
                      {%- elsif product_collection.metafields.custom.color_mapping != blank -%}
                        {%- assign collection_mapping = product_collection.metafields.custom.color_mapping -%}
                      {%- endif -%}
                      {%- if collection_mapping != blank -%}
                        {%- assign mappings = collection_mapping | split: '|' -%}
                        {%- for mapping in mappings -%}
                          {%- assign parts = mapping | split: ':' -%}
                          {%- assign color_name_map = parts[0] | strip -%}
                          {%- if color_name_map == value -%}
                            {%- assign collection_color_metafield = parts[1] | strip -%}
                            {%- break -%}
                          {%- endif -%}
                        {%- endfor -%}
                      {%- endif -%}
                      {%- if collection_color_metafield != blank -%}
                        {%- break -%}
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}

                  <input class="color-swatch__radio" type="radio" name="{{ color_name }}" id="{{ color_id }}" value="{{ value | escape }}" {% if value_to_match == value %}checked="checked"{% endif %} data-variant-url="{{ variant_for_value.url }}" {% if variant_for_value.featured_media %}data-media-id="{{ variant_for_value.featured_media.id }}" data-image-url="{{ image_url }}" data-image-widths="[{{ supported_sizes }}]" data-image-aspect-ratio="{{ variant_for_value.featured_media.preview_image.aspect_ratio }}"{% endif %} aria-hidden="true">
                  {%- comment -%}Aplicar cor ou imagem (ordem de prioridade){%- endcomment -%}
                  {%- if variant_image_for_swatch != blank -%}
                    <label class="color-swatch__item lazyload" for="{{ color_id }}" data-bg="{{ variant_image_for_swatch | img_url: '64x64' }}" title="{{ value | escape }}"></label>
                  {%- elsif color_swatch_image != blank -%}
                    <label class="color-swatch__item lazyload" for="{{ color_id }}" data-bg="{{ color_swatch_image | img_url: '64x64' }}" title="{{ value | escape }}"></label>
                  {%- elsif variant_color_metafield != blank -%}
                    <label class="color-swatch__item" for="{{ color_id }}" style="background-color: {{ variant_color_metafield }} !important; background-image: none !important;" title="{{ value | escape }}"></label>
                  {%- elsif category_color_metafield != blank -%}
                    <label class="color-swatch__item" for="{{ color_id }}" style="background-color: {{ category_color_metafield }} !important; background-image: none !important;" title="{{ value | escape }}"></label>
                  {%- elsif tag_color_metafield != blank -%}
                    <label class="color-swatch__item" for="{{ color_id }}" style="background-color: {{ tag_color_metafield }} !important; background-image: none !important;" title="{{ value | escape }}"></label>
                  {%- elsif collection_color_metafield != blank -%}
                    <label class="color-swatch__item" for="{{ color_id }}" style="background-color: {{ collection_color_metafield }} !important; background-image: none !important;" title="{{ value | escape }}"></label>
                  {%- else -%}
                    <label class="color-swatch__item" for="{{ color_id }}" style="background-color: {{ value | replace: ' ', '' | downcase }} !important; background-image: none !important;" title="{{ value | escape }}"></label>
                  {%- endif -%}
                  <a href="{{ product.url }}" class="color-swatch__item-link">+{{ option.values.size | minus: forloop.index0 }}</a>
                </div>
              {%- endfor -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endcapture -%}

        {%- if color_swatch != blank -%}
          <div class="product-item__swatch-list">
            <div class="color-swatch-list">
              {{ color_swatch }}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}

      {%- if settings.product_price_position == 'after_title' -%}
        {{ price_list }}
      {%- endif -%}

