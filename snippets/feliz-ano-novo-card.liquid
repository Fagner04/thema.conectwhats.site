{% comment %}
  Card de Feliz Ano Novo com Cupom
  Exibe um card elegante com mensagem e op√ß√£o de resgatar cupom
{% endcomment %}

{% if settings.ano_novo_card_enable %}
<div id="anoNovoCardOverlay" class="ano-novo-card-overlay">
  <div class="ano-novo-card-container">
    <div class="ano-novo-card">
      <!-- Bot√£o Fechar -->
      <button class="ano-novo-close-btn" onclick="closeAnoNovoCard()">√ó</button>
      
      <!-- Conte√∫do do Card -->
      <div class="ano-novo-content">
        <!-- T√≠tulo -->
        <h2 class="ano-novo-title">
          {{ settings.ano_novo_card_title | default: 'Feliz Ano Novo!' }}
        </h2>
        
        <!-- Mensagem -->
        <p class="ano-novo-message">
          {{ settings.ano_novo_card_message | default: 'Que 2025 seja repleto de alegrias, conquistas e momentos especiais!' }}
        </p>
        
        <!-- Se√ß√£o do Cupom -->
        {% if settings.ano_novo_show_coupon and settings.ano_novo_coupon_code != blank %}
          <div class="ano-novo-coupon-section">
            <div class="coupon-header">
              <span class="coupon-label">{{ settings.ano_novo_coupon_label | default: 'üéÅ Oferta Especial' }}</span>
            </div>
            
            <div class="coupon-content">
              <div class="coupon-description">
                {{ settings.ano_novo_coupon_description | default: 'Use o cupom abaixo e ganhe desconto especial!' }}
              </div>
              
              <div class="coupon-code-container">
                <div class="coupon-code" id="couponCode">
                  {{ settings.ano_novo_coupon_code }}
                </div>
                <button class="copy-coupon-btn" onclick="copyCoupon()">
                  <span id="copyText">Copiar</span>
                </button>
              </div>
              
              {% if settings.ano_novo_coupon_validity != blank %}
                <div class="coupon-validity">
                  {{ settings.ano_novo_coupon_validity }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
        
        <!-- Bot√£o de A√ß√£o -->
        <div class="ano-novo-actions">
          {% if settings.ano_novo_show_shop_button %}
            <button class="shop-now-btn" onclick="closeAnoNovoCard()">
              {{ settings.ano_novo_shop_button_text | default: 'Come√ßar a Comprar' }}
            </button>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Overlay */
.ano-novo-card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(5px);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.5s ease-out;
  padding: 20px;
}

/* Container do Card */
.ano-novo-card-container {
  position: relative;
  max-width: 500px;
  width: 100%;
}

/* Card Principal */
.ano-novo-card {
  background: {{ settings.ano_novo_card_bg_color | default: '#ffffff' }};
  border-radius: 20px;
  padding: 40px 30px;
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.15),
    0 0 0 1px rgba(0, 0, 0, 0.05);
  position: relative;
  text-align: center;
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
}

/* Bot√£o Fechar */
.ano-novo-close-btn {
  position: absolute;
  top: 15px;
  right: 15px;
  background: rgba(0, 0, 0, 0.1);
  border: none;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  font-size: 20px;
  font-weight: bold;
  color: #666;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.ano-novo-close-btn:hover {
  background: rgba(0, 0, 0, 0.15);
  color: #333;
}

/* T√≠tulo */
.ano-novo-title {
  font-size: 2rem;
  font-weight: 700;
  color: {{ settings.ano_novo_card_title_color | default: '#1a1a1a' }};
  margin: 0 0 15px 0;
  line-height: 1.2;
  animation: fadeInUp 0.6s ease-out 0.8s both;
}

/* Mensagem */
.ano-novo-message {
  font-size: 1rem;
  color: {{ settings.ano_novo_card_text_color | default: '#666666' }};
  line-height: 1.5;
  margin: 0 0 30px 0;
  animation: fadeInUp 0.6s ease-out 1s both;
}

/* Se√ß√£o do Cupom */
.ano-novo-coupon-section {
  background: linear-gradient(135deg, 
    {{ settings.ano_novo_coupon_bg_color_1 | default: '#f59e0b' }} 0%, 
    {{ settings.ano_novo_coupon_bg_color_2 | default: '#f97316' }} 100%);
  border-radius: 15px;
  padding: 25px 20px;
  margin: 25px 0;
  animation: slideUp 0.6s ease-out 1.2s both;
}

.coupon-header {
  margin-bottom: 15px;
}

.coupon-label {
  font-size: 1.1rem;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.coupon-content {
  color: #ffffff;
}

.coupon-description {
  font-size: 0.9rem;
  margin-bottom: 15px;
  opacity: 0.95;
}

/* Container do C√≥digo */
.coupon-code-container {
  display: flex;
  gap: 10px;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  flex-wrap: wrap;
}

.coupon-code {
  background: rgba(255, 255, 255, 0.95);
  color: #1a1a1a;
  padding: 12px 20px;
  border-radius: 8px;
  font-size: 1.2rem;
  font-weight: 700;
  letter-spacing: 2px;
  font-family: 'Courier New', monospace;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  user-select: all;
  cursor: pointer;
}

.copy-coupon-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(10px);
}

.copy-coupon-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.5);
}

.coupon-validity {
  font-size: 0.8rem;
  opacity: 0.9;
  font-style: italic;
}

/* Bot√µes de A√ß√£o */
.ano-novo-actions {
  animation: fadeInUp 0.6s ease-out 1.4s both;
}

.shop-now-btn {
  background: linear-gradient(135deg, 
    {{ settings.ano_novo_button_color_1 | default: '#3b82f6' }} 0%, 
    {{ settings.ano_novo_button_color_2 | default: '#1d4ed8' }} 100%);
  color: {{ settings.ano_novo_button_text_color | default: '#ffffff' }};
  border: none;
  padding: 14px 30px;
  border-radius: 10px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.shop-now-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

/* Anima√ß√µes */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

/* Responsividade */
@media (max-width: 768px) {
  .ano-novo-card {
    padding: 30px 25px;
    border-radius: 15px;
  }
  
  .ano-novo-title {
    font-size: 1.75rem;
  }
  
  .ano-novo-message {
    font-size: 0.95rem;
  }
  
  .coupon-code {
    font-size: 1.1rem;
    padding: 10px 16px;
  }
  
  .coupon-code-container {
    flex-direction: column;
    gap: 8px;
  }
  
  .copy-coupon-btn {
    width: 100%;
    padding: 10px;
  }
}

@media (max-width: 480px) {
  .ano-novo-card-overlay {
    padding: 15px;
  }
  
  .ano-novo-card {
    padding: 25px 20px;
  }
  
  .ano-novo-title {
    font-size: 1.5rem;
  }
  
  .ano-novo-message {
    font-size: 0.9rem;
  }
  
  .ano-novo-coupon-section {
    padding: 20px 15px;
  }
  
  .coupon-code {
    font-size: 1rem;
    letter-spacing: 1px;
  }
}
</style>

<script>
function closeAnoNovoCard() {
  const overlay = document.getElementById('anoNovoCardOverlay');
  if (overlay) {
    overlay.style.animation = 'fadeOut 0.4s ease-out forwards';
    setTimeout(() => {
      overlay.remove();
    }, 400);
    
    // Controle de exibi√ß√£o baseado no modo selecionado
    {% assign display_mode = settings.ano_novo_display_mode | default: 'once_session' %}
    
    {% if display_mode == 'once_session' or settings.ano_novo_show_once %}
      localStorage.setItem('anoNovoCardShown', 'true');
    {% elsif display_mode == 'time_based' %}
      const now = new Date().getTime();
      
      // Usar configura√ß√£o de tempo personalizada (horas + minutos)
      {% assign hours = settings.ano_novo_time_hours | default: 24 %}
      {% assign minutes = settings.ano_novo_time_minutes | default: 0 %}
      
      // Calcular tempo total em milissegundos
      const totalMinutes = ({{ hours }} * 60) + {{ minutes }};
      const showAgainTime = now + (totalMinutes * 60 * 1000);
      
      localStorage.setItem('anoNovoCardNextShow', showAgainTime.toString());
      
      // Log para debug (pode ser removido depois)
      console.log('Card ser√° mostrado novamente em:', {{ hours }},'horas e', {{ minutes }}, 'minutos');
    {% endif %}
    // Modo 'always' n√£o salva nada, sempre mostra
  }
}

function copyCoupon() {
  const couponCode = document.getElementById('couponCode').textContent.trim();
  const copyText = document.getElementById('copyText');
  
  // Tenta copiar usando a API moderna
  if (navigator.clipboard && window.isSecureContext) {
    navigator.clipboard.writeText(couponCode).then(() => {
      copyText.textContent = 'Copiado!';
      setTimeout(() => {
        copyText.textContent = 'Copiar';
      }, 2000);
    }).catch(() => {
      // Fallback para m√©todo antigo
      fallbackCopy(couponCode, copyText);
    });
  } else {
    // Fallback para navegadores antigos
    fallbackCopy(couponCode, copyText);
  }
}

function fallbackCopy(text, copyText) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  textArea.style.top = '-999999px';
  document.body.appendChild(textArea);
  textArea.focus();
  textArea.select();
  
  try {
    document.execCommand('copy');
    copyText.textContent = 'Copiado!';
    setTimeout(() => {
      copyText.textContent = 'Copiar';
    }, 2000);
  } catch (err) {
    copyText.textContent = 'Erro';
    setTimeout(() => {
      copyText.textContent = 'Copiar';
    }, 2000);
  }
  
  textArea.remove();
}

// Auto-close ap√≥s tempo configurado (APENAS se ativado E com tempo definido)
{% if settings.ano_novo_auto_close and settings.ano_novo_auto_close_time and settings.ano_novo_auto_close_time > 0 %}
  setTimeout(() => {
    closeAnoNovoCard();
  }, {{ settings.ano_novo_auto_close_time | times: 1000 }});
{% endif %}

// Verifica se deve mostrar baseado na configura√ß√£o
document.addEventListener('DOMContentLoaded', function() {
  // Aguarda um pouco para garantir que o DOM est√° totalmente carregado
  setTimeout(() => {
    {% assign display_mode = settings.ano_novo_display_mode | default: 'once_session' %}
    
    {% if display_mode == 'once_session' or settings.ano_novo_show_once %}
      // Modo: Uma vez por sess√£o
      if (localStorage.getItem('anoNovoCardShown') === 'true') {
        const overlay = document.getElementById('anoNovoCardOverlay');
        if (overlay) {
          overlay.remove();
        }
      }
    {% elsif display_mode == 'time_based' %}
      // Modo: Baseado em tempo
      const nextShowTime = localStorage.getItem('anoNovoCardNextShow');
      if (nextShowTime) {
        const now = new Date().getTime();
        const showTime = parseInt(nextShowTime);
        
        if (now < showTime) {
          // Ainda n√£o √© hora de mostrar novamente
          const overlay = document.getElementById('anoNovoCardOverlay');
          if (overlay) {
            overlay.remove();
          }
        } else {
          // Tempo expirou, remove o controle para mostrar novamente
          localStorage.removeItem('anoNovoCardNextShow');
        }
      }
    {% endif %}
    // Modo 'always' n√£o faz verifica√ß√µes, sempre mostra
  }, 100);
});
</script>
{% endif %}